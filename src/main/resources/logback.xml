<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d [%thread] %highlight(%-5level) %yellow(%logger{5}) - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="notprivacysafe.graphql.execution" level="ERROR"/>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>